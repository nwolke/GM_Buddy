@page "/admin"
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Admin - GM Buddy</PageTitle>

<div class="admin-container">
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <a href="/" class="breadcrumb-link">
            <span class="breadcrumb-icon">??</span> Home
        </a>
        <span class="breadcrumb-separator">/</span>
        <span class="breadcrumb-current">Admin</span>
    </nav>

    <h1 class="page-title admin-title">Admin Dashboard</h1>

    <div class="paper admin-content">
        <p>This page is only accessible to users with the <strong>Admin</strong> role.</p>
        
        <AuthorizeView>
            <Authorized>
                <h3>Your Roles:</h3>
                <ul>
                    @foreach (var claim in context.User.Claims.Where(c => c.Type == System.Security.Claims.ClaimTypes.Role))
                    {
                        <li class="attribute-chip">@claim.Value</li>
                    }
                </ul>
            </Authorized>
        </AuthorizeView>
    </div>
</div>
