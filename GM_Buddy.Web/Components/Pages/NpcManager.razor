@page "/npc-manager"
@attribute [Authorize]
@inject NpcService NpcService
@inject NavigationManager Navigation

<PageTitle>NPC Manager - GM Buddy</PageTitle>

<div class="npc-manager-container">
    @* Breadcrumb Navigation *@
    <nav aria-label="breadcrumb" class="breadcrumb-nav">
        <a href="/" class="breadcrumb-link">
            <span class="breadcrumb-icon">Home</span>
        </a>
        <span class="breadcrumb-separator">/</span>
        <span class="breadcrumb-current">NPC Manager</span>
    </nav>

    <h1 class="page-title npc-title">NPC Manager</h1>

    @* Authenticated - Show NPC Grid *@
    <div class="npc-toolbar">
        <button class="btn btn-outline" @onclick="RefreshNpcs" disabled="@isLoading">
            Refresh
        </button>
    </div>

    @if (isLoading)
    {
        <div class="loading-container">
            <div class="spinner-border spinner" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (npcs.Count == 0)
    {
        <div class="paper empty-state">
            <p class="text-muted">No NPCs found. Create your first NPC!</p>
        </div>
    }
    else
    {
        @* Mobile: Card View *@
        <div class="npc-cards-container d-md-none">
            @foreach (var npc in npcs)
            {
                <GM_Buddy.Web.Components.Shared.NpcCard Npc="@npc" />
            }
        </div>


        @* Desktop: Table View *@
        <div class="table-container d-none d-md-block">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Game System</th>
                        <th>Lineage</th>
                        <th>Occupation</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var npc in npcs)
                    {
                        <tr>
                            <td class="npc-name-cell">@(npc.Name ?? "Unnamed")</td>
                            <td>@(npc.System ?? "—")</td>
                            <td>@(npc.Stats?.Lineage ?? "—")</td>
                            <td>@(npc.Stats?.Occupation ?? "—")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@code {
    private List<NpcViewModel> npcs = [];
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await RefreshNpcs();
    }

    private async Task RefreshNpcs()
    {
        isLoading = true;
        npcs = await NpcService.GetNpcsAsync();
        isLoading = false;
    }
}
