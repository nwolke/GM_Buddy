{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/gm-buddy-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] [{SourceContext}] {Message:lj} {Properties:j}{NewLine}{Exception}",
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithEnvironmentName" ],
    "Properties": {
      "Application": "GM_Buddy"
    }
  },
  "AllowedHosts": "*",
  "DbSettings": {
    "Host": "localhost",
    "Port": "5432",
    "Database": "gm_buddy",
    "Username": "postgres",
    "Password": ""
  },
  "Cognito": {
    "Region": "",
    "UserPoolId": "",
    "ClientId": "",
    "Domain": ""
  },
  "ConnectionStrings": {
    "PostgreSQL": ""
  },
  "Observability": {
    "EnableMetrics": true,
    "EnableDetailedErrors": true,
    "MemoryMetricsIntervalSeconds": 30,
    "EnableHealthChecks": true
  },
  "AWS": {
    "CloudWatch": {
      "Enabled": false,
      "Region": "us-east-1",
      "LogGroup": "/aws/elasticbeanstalk/gm-buddy/application",
      "MetricsNamespace": "GMBuddy/Application"
    }
  }
}
