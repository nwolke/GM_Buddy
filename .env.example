# ===========================================
# GM_Buddy Local Development Environment
# ===========================================
# Copy this file to .env and update with your actual values
# .env is gitignored and should never be committed

# ===========================================
# PostgreSQL Database Configuration
# ===========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YourSecurePasswordHere123!
POSTGRES_DB=gm_buddy

# ===========================================
# pgAdmin Configuration (optional dev tool)
# ===========================================
PGADMIN_DEFAULT_EMAIL=dev@example.com
PGADMIN_DEFAULT_PASSWORD=admin123

# ===========================================
# AWS Cognito Configuration
# ===========================================
# For local development, you can use actual Cognito or set USE_COGNITO=false
COGNITO_REGION=us-west-2
COGNITO_USER_POOL_ID=us-west-2_XXXXXXXXX
COGNITO_CLIENT_ID=your_client_id_here
COGNITO_DOMAIN=your-cognito-domain-prefix

# ===========================================
# React Application Settings
# ===========================================
# API URL for local backend (docker network: http://gm_buddy_server:8080, localhost: http://localhost:8080)
VITE_API_URL=http://localhost:8080

# Cognito settings for React
VITE_USE_COGNITO=false
VITE_COGNITO_DOMAIN=your-cognito-domain-prefix.auth.us-west-2.amazoncognito.com
VITE_COGNITO_CLIENT_ID=your_client_id_here
VITE_COGNITO_REDIRECT_URI=http://localhost:3000/callback
VITE_COGNITO_LOGOUT_URI=http://localhost:3000

# ===========================================
# ASP.NET Core Configuration
# ===========================================
ASPNETCORE_ENVIRONMENT=Development
ASPNETCORE_HTTP_PORTS=8080

# ===========================================
# Docker Configuration
# ===========================================
# Leave empty for local builds
DOCKER_REGISTRY=
